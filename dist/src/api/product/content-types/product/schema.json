{
    "kind": "collectionType",
    "collectionName": "products",
    "info": {
        "singularName": "product",
        "pluralName": "products",
        "displayName": "Продукт",
        "description": ""
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "name": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "string",
            "required": true
        },
        "slug": {
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            },
            "type": "string",
            "unique": true
        },
        "previewImage": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": [
                "images",
                "files"
            ],
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "images": {
            "type": "media",
            "multiple": true,
            "required": false,
            "allowedTypes": [
                "images",
                "files"
            ],
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "mainDescription": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "richtext"
        },
        "variation": {
            "displayName": "Вариации",
            "type": "component",
            "repeatable": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "variation.variaczii"
        },
        "brand": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::brand.brand",
            "inversedBy": "products"
        },
        "categories": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::category.category",
            "inversedBy": "products"
        },
        "price": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "decimal"
        },
        "general_params": {
            "displayName": "general_params",
            "type": "component",
            "repeatable": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "general-params.general-params",
            "max": 8
        },
        "description": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "text",
            "required": true
        },
        "params_other": {
            "displayName": "params_other",
            "type": "component",
            "repeatable": false,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "params-other.params-other"
        },
        "video": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "files",
                "videos"
            ],
            "pluginOptions": {
                "i18n": {
                    "localized": false
                }
            }
        },
        "img_description": {
            "displayName": "img_description",
            "type": "component",
            "repeatable": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "img-description.img-description"
        },
        "top_banner_description": {
            "type": "component",
            "repeatable": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "img-description.img-description"
        },
        "b_banner_description": {
            "type": "component",
            "repeatable": true,
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "component": "img-description.img-description"
        },
        "short_description": {
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "type": "string",
            "maxLength": 100
        }
    }
}
